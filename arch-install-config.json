{
    "audio": "pulseaudio",
    "bootloader": "grub-install",
    "custom-commands": [],
    "filesystem": "btrfs",
    "gfx_driver": "Nvidia",
    "harddrive": {
        "path": "<path of device>"
    },
    "hostname": "maria",
    "kernels": [
        "linux"
    ],
    "keyboard-language": "de",
    "mirror-region": "Worldwide",
    "nic": {
        "NetworkManager": true
    },
    "packages": [
      "git", "wget", "zsh", "awesome",
      "kitty", "neovim", "lightdm"
    ],
    "services": ["lightdm"],
    "superusers": {
        "rubs": {
            "!password": "<password>"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}
